#!/usr/bin/env perl

use strict;
use warnings;
use File::Spec::Functions qw/ rel2abs /;

use App::ProcLaunch;
use Getopt::Long;

GetOptions(
    'f|foreground' => \my $foreground,
    'D|debug'      => \my $debug,
    'log-level=s'  => \my $log_level,
);

my ($state_dir, $profiles_dir) = @ARGV;

die "usage: $0 [options] [state dir] [profiles dir]"
    unless $state_dir && $profiles_dir;

if ($debug) {
    $log_level = 'debug';
}

$log_level ||= 'info';

App::ProcLaunch->new(
    state_dir    => rel2abs($state_dir),
    profiles_dir => rel2abs($profiles_dir),
    foreground   => $foreground,
    log_level    => $log_level,
)->run();
